<h1><%= t ".form" %></h1>
<div class="row">
  <div class="col">
    <h1><% t ".title" %></h1>

    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :code %>
      <%= f.text_field :code, placeholder: t(".code"), class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: t(".password"), class: "form-control" %>

      <br><%= f.submit t(".button"), class: "btn btn-primary btn-block btn-large" %>
    <% end %>
  </div>
</div>
