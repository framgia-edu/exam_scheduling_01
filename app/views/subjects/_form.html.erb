<%= form_for @subject do |form| %>
  <div class="form-row">
    <div class="col">
    <%= form.text_field :code, class: "form-control",
      placeholder: t("subjects.subject_code") %>
    </div>
     <div class="col">
    <%= form.text_field :name, class: "form-control",
       placeholder: t("subjects.subject_name") %>
     </div>
     <div class="col">
     <%= form.number_field :times_exam, class: "form-control",
       placeholder: t("subjects.times") %>
     </div>
     <div class="col">
     <%= form.submit yield(:button_text), class: "btn btn-primary" %>
    </div>
    </div>
  </div>
<% end %>
