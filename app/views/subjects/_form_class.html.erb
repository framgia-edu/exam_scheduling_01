<%= form_with url: add_subjects_path, local: true do |form| %>
  <div class="form-row">
    <%= form.hidden_field :sub_id , id: :sub_id, value: @subject.id %>
    <div class="col">
      <%= form.text_field :code, id: :code, class: "form-control",
        placeholder: t("subjects.student_code") %>
    </div>
    <div class="col">
      <%= form.submit t("subjects.add"),class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
