<% provide :id, "body-subject" %>
<% provide :title, t(".title", subject_code: @subject.subject_code) %>
<%= render "layouts/menu" %>
<section>
  <form action="delete_class" method="get">
    <h1 id = "name"><%= t(".name", subject_code: @subject.subject_code) %>
      <section class="links">
        </br>
       <%= link_to t(".add"), "#", class: "link wipe" %>
      </section>
    </h1>
    </br>
    <div class="tbl-header">
      <table cellpadding="0" cellspacing="0" border="0">
        <thead>
          <tr>
            <th>#</th>
            <th><%= t ".subject_code_of_class" %></th>
            <th><%= t ".subject_name_of_class" %></th>
            <th><%= t ".class_code" %></th>
            <th><%= t ".student_list_of_class" %></th>
            <th><%= t ".edit" %></th>
            <th><%= t ".delete" %></th>
          </tr>
        </thead>
      </table>
    </div>
    <div class="tbl-content">
      <table cellpadding="0" cellspacing="0" border="0">
        <tbody>
          <% @classes.each_with_index do |study_class, index| %>  
            <tr> 
              <td><%= index + 1  %></td>
              <td><%= @subject.subject_code %></td>
              <td><%= @subject.subject_name %></td>
              <td><%= study_class.class_code %></td>
              <td>
                <%= link_to t(".reckon_link"), "#", id: "#classes_list_of_subject" %>
              </td>
              <td>
                <section class="links">
                  <%= link_to t(".edit_link"), "#", class: "link underline" %>
                </section>
              </td>
              <td>
                <div>
                  <label>
                    <input type="checkbox" class="option-input checkbox" name=""/><%= t ".delete_checkbox" %>
                  </label>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="wrap">
      <button class="button"><%= t ".delete_button" %></button>
    </div>
  </form>
</section>
